@using System.Globalization
@model JobCalculator.Models.JobReceipt
@{
    ViewBag.Title = "Receipt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="col-md-6">
    <h1>Thanks for your order. Now pay up!</h1>
    <br />
</div>
<div class="col-md-6 justify-content-md-center">
    <ul class="list-group list-group-flush">
        @foreach (var item in Model.Products)
        {
            <li class="list-group-item">@item.Key: @item.Value.ToString("C", CultureInfo.CurrentCulture)</li>
        }
        <li class="list-group-item"><strong>Total:</strong> @Model.Total.ToString("C", CultureInfo.CurrentCulture)</li>

    </ul>
</div>

<br />

<a class="btn btn-primary" asp-action="Index" asp-controller="Home">Start Over</a> 